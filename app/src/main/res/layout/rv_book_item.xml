<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rv_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="false">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rv_order_number_book"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:text="1"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/rv_cover_book"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@+id/rv_order_number_book"
            android:layout_toRightOf="@+id/rv_order_number_book"
            android:src="@drawable/ic_book" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rv_title_book"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/rv_cover_book"
            android:layout_toRightOf="@+id/rv_cover_book"
            android:padding="5dp"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="25dp" />





    </RelativeLayout>
</android.support.v7.widget.CardView>
